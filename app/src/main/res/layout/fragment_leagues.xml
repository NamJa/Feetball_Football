<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnSecondary"
    android:orientation="vertical">

    <TextView
        android:id="@+id/epl_textview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Premier League"
        android:textAlignment="center"
        android:textColor="?attr/colorPrimaryVariant"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/laliga_textview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="LA LIGA"
        android:textAlignment="center"
        android:textColor="?attr/colorPrimaryVariant"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/serie_a_textview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="SERIE A"
        android:textAlignment="center"
        android:textColor="?attr/colorPrimaryVariant"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bundesliga_textview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="BUNDESLIGA"
        android:textAlignment="center"
        android:textColor="?attr/colorPrimaryVariant"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ligue1_textview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="LIGUE 1"
        android:textAlignment="center"
        android:textColor="?attr/colorPrimaryVariant"
        android:textSize="25sp"
        android:textStyle="bold" />


</LinearLayout>