<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_height"
                app:layout_collapseMode="pin">

            </androidx.appcompat.widget.Toolbar>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/dummySpace"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/teamNames"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/dummySpace">

                    <TextView
                        android:id="@+id/hometeam_textview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxLines="2"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        tools:text="Manchester City" />

                    <TextView
                        android:id="@+id/matchElapsed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.35"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        tools:text="종료됨" />

                    <TextView
                        android:id="@+id/awayteam_textview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxLines="2"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        tools:text="Borussia Mönchengladbach" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/teamNames">

                    <TextView
                        android:id="@+id/hometeam_scorer_textview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        tools:text="A. Saint-Maximin 49' 52' 53' 55' 56'\nC. Willson 54'" />

                    <ImageView
                        android:id="@+id/goal_icon"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="0.2"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_league"
                        android:visibility="invisible"
                        app:tint="@color/black" />

                    <TextView
                        android:id="@+id/awayteam_scorer_textview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        tools:text="Erling Haaland 1' 3' 4' 8' 19' 29' 49'" />
                </LinearLayout>

            </RelativeLayout>


        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--     경기 통계      -->


            <!--                                         공격|
            유효 슈팅, 난사, 총 슈팅, 막힌 슛, 박스 내 슛, 박스 밖 슛,
                                  요약 칸|
             파울, 코너킥, 오프사이드, 점유율,
                           반칙|
             옐로 카드, 레드 카드,
               필요 X|
             키퍼 선방,
                                      패스|
             패스 횟수, 정확한 패스, 패스 성공률
             -->

            <!--      요약      -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/drawable_line" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="요약"
                    android:textAlignment="center"

                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/drawable_line" />
            </LinearLayout>
            <!--      요약 내용      -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/split_ball_possession"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/ball_possession_string"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="점유율"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <ProgressBar
                    android:id="@+id/ball_possession_progressbar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/ball_possession_string"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="9dp" />

                <TextView
                    android:id="@+id/home_ball_possession"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ball_possession_string"
                    android:layout_alignEnd="@id/split_ball_possession"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp"
                    android:fontFamily="sans-serif-black"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    tools:text="31%" />

                <TextView
                    android:id="@+id/away_ball_possession"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ball_possession_string"
                    android:layout_alignStart="@id/split_ball_possession"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:fontFamily="sans-serif-black"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    tools:text="69%" />

            </RelativeLayout>
            <!--   슈팅   -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/drawable_line" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="슈팅"
                    android:textAlignment="center"

                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/drawable_line" />
            </LinearLayout>
            <!--   슈팅(공격) 통계   -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="25dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <View
                        android:id="@+id/split_shotoff"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_centerHorizontal="true" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_alignEnd="@id/split_shotoff"
                        android:layout_alignParentStart="true"
                        android:background="@color/black" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_alignStart="@id/split_shotoff"
                        android:layout_alignParentEnd="true"
                        android:background="#393939" />

                    <TextView
                        android:id="@+id/home_shotoff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:background="@color/black"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:text="5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="빗나간 슈팅"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/away_shotoff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp"
                        android:background="#393939"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:text="5" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home_shotoff">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/black" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3.5"
                        android:paddingHorizontal="10dp"
                        android:paddingTop="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <View
                                android:id="@+id/split"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_centerHorizontal="true" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_alignEnd="@id/split"
                                android:layout_alignParentStart="true"
                                android:background="@color/black" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_alignStart="@id/split"
                                android:layout_alignParentEnd="true"
                                android:background="#393939" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true">

                                <TextView
                                    android:id="@+id/home_shoton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginStart="20dp"
                                    android:textColor="@color/white"
                                    android:textSize="25sp"
                                    android:textStyle="bold"
                                    tools:text="5" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_centerHorizontal="true"
                                    android:text="유효 슈팅"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/away_shoton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginEnd="20dp"
                                    android:textColor="@color/white"
                                    android:textSize="25sp"
                                    android:textStyle="bold"
                                    tools:text="5" />
                            </RelativeLayout>
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#393939" />


                </LinearLayout>


            </LinearLayout>

            <!--      패스 통계      -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/split_pass"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/pass_accur_string_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="패스 성공률"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/pass_accur_string_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pass_accur_string_1"
                    android:layout_centerHorizontal="true"
                    android:text="패스 성공 / 전체"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/home_accuracy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pass_accur_string_2"
                    android:layout_alignEnd="@id/split_pass"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-black"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    tools:text="69%" />

                <TextView
                    android:id="@+id/away_accuracy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pass_accur_string_2"
                    android:layout_alignStart="@id/split_pass"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-black"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    tools:text="88%" />

                <TextView
                    android:id="@+id/home_pass_accur_by_total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/home_accuracy"
                    android:layout_alignEnd="@id/split_pass"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    tools:text="233 / 340" />

                <TextView
                    android:id="@+id/away_pass_accur_by_total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/home_accuracy"
                    android:layout_alignStart="@id/split_pass"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    tools:text="666 / 757" />

            </RelativeLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <ImageView
        android:id="@+id/hometeam_imageview"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:antialias="true"
        android:scaleType="fitXY"
        app:layout_behavior=".behavior.BehaviorHomeTeam" />

    <TextView
        android:id="@+id/score_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="        "
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_behavior=".behavior.BehaviorScoreTextView" />

    <ImageView
        android:id="@+id/awayteam_imageview"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:antialias="true"
        android:scaleType="fitXY"
        app:layout_behavior=".behavior.BehaviorAwayTeam" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>